{
  "name": "skyie-blaze",
  "version": "1.0.0",
  "description": "Skyie Blaze - Brand-governed autonomous marketing operating system",
  "private": true,
  "type": "commonjs",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "lint": "eslint . --ext .js,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "npm run test:unit && npm run test:golden",
    "test:unit": "jest --config jest.config.js",
    "test:golden": "node scripts/ci/run-golden-tests.js",
    "test:enforcement": "jest --config jest.config.js --testPathPattern=enforcement",
    "validate:schemas": "node scripts/ci/validate-schemas.js",
    "validate:openapi": "redocly lint backend/api/openapi.yaml",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "deploy:staging": "scripts/deploy/manual-deploy.sh staging",
    "deploy:production": "scripts/deploy/manual-deploy.sh production",
    "health:check": "scripts/deploy/health-check.sh"
  },
  "devDependencies": {
    "@redocly/cli": "^1.25.0",
    "@types/node": "^20.10.0",
    "ajv": "^8.12.0",
    "ajv-cli": "^5.0.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0",
    "yaml": "^2.8.2"
  },
  "dependencies": {
    "express": "^4.18.0",
    "pg": "^8.11.0",
    "redis": "^4.6.0"
  }
}
