{
  "env": {
    "node": true,
    "es2022": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "extends": ["eslint:recommended"],
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "prefer-const": "warn",
    "eqeqeq": ["error", "always"],
    "no-var": "error"
  },
  "ignorePatterns": ["node_modules/", "dist/", "coverage/", "reports/", "*.min.js", "*.ts", "*.tsx"]
}
