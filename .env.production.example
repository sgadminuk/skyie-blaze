# Skyie Blaze - Production Environment Configuration
# Copy this file to .env.production on your production VPS
# ALL SECRETS MUST BE UNIQUE AND SECURE

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV=production
APP_NAME=skyie-blaze
APP_VERSION=${RELEASE_TAG:-latest}
LOG_LEVEL=warn

# =============================================================================
# POSTGRES DATABASE
# =============================================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=skyie_blaze_prod
POSTGRES_USER=skyie_prod
POSTGRES_PASSWORD=GENERATE_VERY_SECURE_PASSWORD_HERE

DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# =============================================================================
# REDIS
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=GENERATE_VERY_SECURE_PASSWORD_HERE

# =============================================================================
# JWT / AUTH
# =============================================================================
JWT_SECRET=GENERATE_WITH_openssl_rand_base64_64_UNIQUE_FOR_PROD
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=24h

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_PORT=3000
API_HOST=0.0.0.0
API_PREFIX=/v1

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGINS=https://app.skyie.io,https://skyie.io

# =============================================================================
# DOCKER REGISTRY
# =============================================================================
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE_PREFIX=sgadminuk/skyie-blaze

# =============================================================================
# TRAEFIK (Reverse Proxy)
# =============================================================================
# Name of the existing Traefik network on the VPS
TRAEFIK_NETWORK=SkyieProxy

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...

# =============================================================================
# STORAGE
# =============================================================================
STORAGE_TYPE=s3
# S3_BUCKET=skyie-blaze-prod
# S3_REGION=eu-west-2
# S3_ACCESS_KEY=
# S3_SECRET_KEY=

# =============================================================================
# OBSERVABILITY
# =============================================================================
# SENTRY_DSN=https://...@sentry.io/...
