# Skyie Blaze - Staging Environment Configuration
# Copy this file to .env.staging on your staging VPS

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV=staging
APP_NAME=skyie-blaze
APP_VERSION=${GITHUB_SHA:-latest}
LOG_LEVEL=info

# =============================================================================
# POSTGRES DATABASE
# =============================================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=skyie_blaze_staging
POSTGRES_USER=skyie_staging
POSTGRES_PASSWORD=GENERATE_SECURE_PASSWORD_HERE

DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# =============================================================================
# REDIS
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=GENERATE_SECURE_PASSWORD_HERE

# =============================================================================
# JWT / AUTH
# =============================================================================
JWT_SECRET=GENERATE_WITH_openssl_rand_base64_64
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_PORT=3000
API_HOST=0.0.0.0
API_PREFIX=/v1

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGINS=https://staging.skyie.io

# =============================================================================
# DOCKER REGISTRY
# =============================================================================
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE_PREFIX=sgadminuk/skyie-blaze

# =============================================================================
# TRAEFIK (Reverse Proxy)
# =============================================================================
# Name of the existing Traefik network on the VPS
TRAEFIK_NETWORK=SkyieProxy

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...

# =============================================================================
# STORAGE
# =============================================================================
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=/data/storage
